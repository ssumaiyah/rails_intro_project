<h1>Books</h1>

<%= link_to 'New Book', new_book_path %>

<% @books.each do |book| %>
  <div>
    
    <h2><%= link_to book.title, book_path(book) %></h2>
<p>Author: <%= book.author.name %></p>
<p>Genres: <%= book.genre_names %></p> <!-- Adjusted to use book.genre_names -->

    
    <% if book.cover_image.attached? %>
      <%= image_tag url_for(book.cover_image) %>
    <% end %>
  </div>
<% end %>

<%= paginate @books %>
