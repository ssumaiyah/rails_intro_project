<h1>Books</h1>

<%= link_to 'New Book', new_book_path, class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded mb-4" %>

<div class="grid grid-cols-1 gap-6">
  <% @books.each do |book| %>
    <div class="border border-gray-300 rounded-lg p-4 flex">
      <!-- Left Column for Image -->
      <div class="flex-none mr-4">
        <% if book.cover_image.attached? %>
          <%= image_tag url_for(book.cover_image), class: "rounded-lg shadow-md h-24 w-auto" %>
        <% else %>
          <div class="bg-gray-300 rounded-lg h-24 w-24 flex items-center justify-center">
            <span class="text-gray-600 text-lg">No Image</span>
          </div>
        <% end %>
      </div>

      <!-- Right Column for Book Details -->
      <div class="flex-grow">
        <h2 class="text-xl font-semibold mb-2"><%= link_to book.title, book_path(book), class: "text-blue-500 hover:underline" %></h2>
        <p><strong>Author:</strong> <%= link_to book.author.name, author_path(book.author) %></p>
        <!-- Add other details here as needed -->
      </div>
    </div>
  <% end %>
</div>

<%= paginate @books %>
