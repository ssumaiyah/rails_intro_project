<h1>Authors</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Books</th>
    </tr>
  </thead>
  <tbody>
    <% @authors.each do |author| %>
      <tr>
        <td><%= author.name %></td>
        <td><%= link_to 'Show Books', author %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @authors%>
