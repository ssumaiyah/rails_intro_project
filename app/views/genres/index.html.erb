<h1>Genres</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Books</th>
    </tr>
  </thead>
  <tbody>
    <% @genres.each do |genre| %>
      <tr>
        <td><%= genre.name %></td>
        <td><%= link_to 'Show books', genre %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @genres %>
