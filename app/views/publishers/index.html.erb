<h1>Publishers</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Books</th>
    </tr>
  </thead>
  <tbody>
    <% @publishers.each do |publisher| %>
      <tr>
        <td><%= publisher.name %></td>
        <td><%= link_to 'Show books', publisher %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @publishers %>
