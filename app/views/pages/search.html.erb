<!-- app/views/pages/search.html.erb -->
<h1>Search Results</h1>

<% if @results.any? %>
  <ul>
    <% @results.each do |result| %>
      <li>
        <% if result.is_a?(Book) %>
          <%= link_to result.title, book_path(result) %>
        <% elsif result.is_a?(Author) %>
          <%= link_to result.name, author_path(result) %>
        <% else %>
          <%= "Unknown result type" %>
        <% end %>
      </li>
    <% end %>
  </ul>
<% else %>
  <p>No results found.</p>
<% end %>
